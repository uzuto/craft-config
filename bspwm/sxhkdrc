## Keybindings config for Archcraft's BSPWM

##---------- Keybindings for bspwm ----------##

# Terminal (alacritty)
super + Return
	bspterm

# Terminal (floating)
alt + Return
	bspterm --float

# Terminal (fullscreen)
super + t
	bspterm --full

##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
alt + F1
	sh ~/.config/bspwm/rofi/bin/launcher

# Rofi Network Menu
super + n
	nmd

# Rofi Themes Menu
ctrl + alt + t
	sh ~/.config/bspwm/rofi/bin/themes

# Rofi Menus/Applets
super + {w,m,x,r,s}
	sh ~/.config/bspwm/rofi/bin/{windows,mpd,powermenu,asroot,screenshot}

##---------- Applications ----------##

# Launch Apps
super + {f,b,e}
	{thunar,brave,geany}

# Terminal Apps
ctrl + alt + {v,r,h}
	alacritty --config-file ~/.config/bspwm/alacritty/alacritty.yml -e {vim,ranger,htop}

# Color Picker
super + p
	color-gpick

# Lockscreen
alt + l
    betterlockscreen -l

##---------- System Keys ----------##

# Take a screenshot
Print
	takeshot --now

# Take screenshot in 5 second
alt + Print
	takeshot --in5

# Take screenshot in 10 second
shift + Print
	takeshot --in10

# Take screenshot of active window
ctrl + Print
	takeshot --win

# Take screenshot of area
ctrl + alt + Print
	takeshot --area

# Brighness control
XF86MonBrightness{Up,Down}
	brightness{ --inc, --dec}

# Volume control
XF86Audio{RaiseVolume,LowerVolume}
	volume{ --inc, --dec}

XF86AudioMute
	volume --toggle

XF86AudioMicMute
	volume --toggle-mic

# Music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

##---------- Bspwm ----------##

# Close App
super + {_,shift + }q
	bspc node -{c,k}

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# kill window
ctrl + alt + Escape
    xkill

# Quit/Restart bspwm
ctrl + shift + {q,r}
	bspc {quit,wm -r}

# Split horizontal, vertical or cancel
super + {h,v,c}
	bspc node -p {east,south,cancel}

# Preselect the ratio
alt + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Fullscreen or Monocle
alt + f
#	bspc desktop -l next
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + shift + space
#super + {p,t}
    bspc node -t "~"{pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Send the window to another edge of the screen
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Switch workspace
ctrl + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Switch to last opened workspace
alt + {Tab,grave}
	bspc {node,desktop} -f last

# Cycle through windows
super + {Tab,grave}
	bspc node -f next

# Send focused window to another workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}'

# move focused window to the next workspace and then switch to that workspace
ctrl + alt + {Left,Right}
    id=$(bspc query --nodes --node); bspc node --to-desktop {prev,next}; bspc desktop --focus next; bspc node --focus ${id}

# Expanding windows
super + control + {Left,Right,Up,Down}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}

## Shrinking windows
super + alt + {Left,Right,Up,Down}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}

## Move floating windows
ctrl + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Hide/Unhide Window
super + i
	bspwinmask
##----------Others---------##

# Package update
super + u
	 alacritty -e yay

# Shutdown
super + Delete
    ~/.scripts/switch-user

# Start aniwatcher
super + a
    aniwrapper -T ~/.config/bspwm/rofi/themes/launcher.rasi

# Set screen temprature
alt + 1
    sct 4000
alt + 2
    sct

# Custom FM Stuff
ctrl + shift + s
    alacritty --config-file ~/.config/bspwm/alacritty/alacritty.yml -e ranger /run/media/uzuto/Local\ Disk/.SID

super + d
    rofi -show drun -theme dmenu
ctrl + alt + f
    rofi -show filebrowser -theme dmenu
##---------- EOF ----------##
